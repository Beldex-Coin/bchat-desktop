{
  "name": "bchat-desktop",
  "productName": "BChat",
  "description": "Private messaging from your desktop",
  "version": "1.8.6",
  "license": "GPL-3.0",
  "author": {
    "name": "Oxen Labs",
    "email": "team@oxen.io"
